{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "ts-build",
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["evm", "guardian", "../peer-server/src/client/configClient.ts"],
  "files": ["../verifiable-evm-build/*.json"]
}
