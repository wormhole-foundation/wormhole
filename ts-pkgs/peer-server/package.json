{
  "name": "@xlabs-xyz/peer-server",
  "version": "1.0.0",
  "description": "Minimal Node.js REST server for peer management with Ethereum integration",
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "start:server": "tsx src/server/index.ts",
    "dev:server": "tsx --watch src/server/index.ts",
    "start:client": "tsx src/client/index.ts",
    "dev:client": "tsx --watch src/client/index.ts",
    "test": "npm run build && vitest"
  },
  "dependencies": {
    "@scure/base": "^2.0.0",
    "@xlabs-xyz/peer-lib": "workspace:*",
    "binary-layout": "^1.3.2",
    "cors": "^2.8.5",
    "ethers": "^6.16.0",
    "express": "^4.22.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "author": "",
  "license": "Apache-2.0"
}
