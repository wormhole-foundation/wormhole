{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["dom", "es5", "scripthost", "es2020.bigint"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "**/__tests__/*", "**/*.test.ts"]
}
