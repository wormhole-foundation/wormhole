{
  "name": "@wormhole-foundation/sdk-base",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wormhole-foundation/connect-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/wormhole-foundation/connect-sdk/issues"
  },
  "homepage": "https://github.com/wormhole-foundation/connect-sdk#readme",
  "directories": {
    "test": "__tests__"
  },
  "license": "Apache-2.0",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@scure/base": "^1.1.3"
  },
  "sideEffects": false,
  "scripts": {
    "typecheck": "cp ./__tests__/typechecks/index.test-d.ts ./lib/esm/ && tsd",
    "test": "jest --config ../../jest.config.ts __tests__/*.ts && npm run typecheck",

    "clean": "rm -rf ./lib && rm -f ./*.tsbuildinfo",

    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "rebuild": "npm run clean && npm run build:cjs && npm run build:esm",

    "lint": "npm run prettier && eslint --fix",
    "prettier": "prettier --write ./src",

    "bump:beta": "bump prerelease"
  }
}
