{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "ES2022",
    "types":["node", "jest"],
    "moduleResolution": "node",
    "outDir": "./lib/esm",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["jest.config.ts"]
}
