{
  "name": "peer-server",
  "version": "1.0.0",
  "description": "Minimal Node.js REST server for peer management with Ethereum integration",
  "main": "src/server/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start:server": "tsx src/server/index.ts",
    "dev:server": "tsx --watch src/server/index.ts",
    "start:client": "tsx src/client/index.ts",
    "dev:client": "tsx --watch src/client/index.ts",
    "test": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2",
    "vitest": "^1.6.1"
  },
  "keywords": [
    "peer",
    "server",
    "ethereum",
    "rest"
  ],
  "author": "",
  "license": "MIT"
}
