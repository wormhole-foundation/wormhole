{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "node16",
    "target": "es2022",
    "outDir": "ts-build",
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["tests", "target/types", "scripts"]
}
